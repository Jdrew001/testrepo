<div class="chip-wrapper" [ngClass]="className">
    <div class="chip-container">
      <!-- Chips Items -->
      <div *ngFor="let item of control.value" class="chip">
        <span>{{item}}</span>
        <button type="button" class="chip-remove" (click)="remove(item)">×</button>
      </div>
      
      <!-- Input Field - borderless as requested -->
      <div class="chip-input-container">
        <input 
          type="text" 
          class="chip-input" 
          [placeholder]="field?.placeholder || 'Enter value'" 
          [(ngModel)]="inputValue"
          (keydown)="onKeyDown($event)"
        >
        
        <!-- +1 Dropdown inside chip container -->
        <div class="dropdown">
          <button type="button" class="dropdown-button" (click)="toggleDropdown($event)">
            <span>+1</span>
            <i class="dropdown-caret">▼</i>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="dropdown-menu" *ngIf="isDropdownOpen">
            <div class="dropdown-item" *ngFor="let item of refData" (click)="selectFromDropdown(item)">
              {{item}}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- X (clear) button -->
    <button type="button" class="clear-button" (click)="clearAll()">×</button>
    
    <!-- Overlay -->
    <div class="overlay" *ngIf="showOverlay" (click)="closeDropdown()"></div>
  </div>